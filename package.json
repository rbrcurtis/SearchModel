{
  "name": "search-model",
  "version": "0.1.0",
  "description": "TypeScript Active Record pattern for Elasticsearch with decorator-based validation",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf lib esm types",
    "prebuild": "npm run clean",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "elasticsearch",
    "orm",
    "active-record",
    "typescript",
    "validation",
    "decorators",
    "search",
    "database"
  ],
  "author": "Accordyx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/accordyx/search-model.git"
  },
  "files": [
    "lib",
    "esm",
    "types",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "bson-objectid": "^2.0.4",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./lib/index.js",
      "types": "./types/index.d.ts"
    }
  }
}