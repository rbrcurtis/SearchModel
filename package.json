{
  "name": "search-model",
  "version": "0.1.0",
  "description": "TypeScript Active Record pattern for Elasticsearch with decorator-based validation",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf lib esm types",
    "prebuild": "yarn clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "elasticsearch",
    "orm",
    "active-record",
    "typescript",
    "validation",
    "decorators",
    "search",
    "database"
  ],
  "author": "Accordyx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rbrcurtis/SearchModel.git"
  },
  "files": [
    "lib",
    "esm",
    "types",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "bson-objectid": "^2.0.4",
    "dotenv": "^16.0.0",
    "queue": "^7.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^4.0.10",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./lib/index.js",
      "types": "./types/index.d.ts"
    }
  }
}
